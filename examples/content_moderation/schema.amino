# Content Moderation Schema

struct user {
    id: Str,
    account_age_days: Int,
    reputation_score: Float,
    verified: Bool,
    previous_violations: Int
}

struct content {
    id: Str,
    type: Str,  # "post", "comment", "message"
    text: Str,
    language: Str,
    word_count: Int,
    has_links: Bool,
    has_media: Bool
}

struct context {
    platform: Str,
    timestamp: Str,
    report_count: Int,
    community_guidelines_version: Str
}

# ML and analysis functions
sentiment_score: (text: Str) -> Float
toxicity_score: (text: Str) -> Float
contains_spam_patterns: (text: Str) -> Bool
contains_banned_words: (text: Str) -> Bool
is_potential_harassment: (text: Str, target_user: Str) -> Bool
detect_self_harm_language: (text: Str) -> Bool