# Content Moderation Schema

struct user {
    id: str,
    account_age_days: int,
    reputation_score: float,
    verified: bool,
    previous_violations: int
}

struct content {
    id: str,
    type: str,  # "post", "comment", "message"
    text: str,
    language: str,
    word_count: int,
    has_links: bool,
    has_media: bool
}

struct context {
    platform: str,
    timestamp: str,
    report_count: int,
    community_guidelines_version: str
}

# ML and analysis functions
sentiment_score: (str) -> float
toxicity_score: (str) -> float
contains_spam_patterns: (str) -> bool
contains_banned_words: (str) -> bool
is_potential_harassment: (str, str) -> bool  # text, target_user
detect_self_harm_language: (str) -> bool